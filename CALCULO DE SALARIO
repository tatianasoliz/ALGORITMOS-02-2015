//Programa de calculo de salario

#include "stdafx.h"
#include "iostream"
#include "conio.h"
#include "stdio.h"
using namespace std;

float salrioNeto (float sb);

void main (void)
{ 
	int n, i, sm = 1400;
	float s, sb, sn, prom;
	s=0;
	do{
	cout << "Ingresar numeros de empleados: ";
	cin >> n;
	}while(n<=0);
	for(i = 1; i <= n; i++)
	{
	do{
		cout << "\nIngresar el valor del salario Bruto: ";
		cin >> sb;
	}while(sb<=0);
		if (sb > (sm * 2))
		{
			sn = salrioNeto (sb);
			cout << "Salario Neto es: " << sn << "\n";
		}			
		else
		{
			sn = sb;
			cout << "Salario Neto es: " << sn << "\n";
		}
		s = s + sn;
	}
	cout << "\n\nSalario total a pagar: " << s << "\n";
	prom = s / n;
	cout << "\nSalario Promedio: " << prom;
	getch ();
}

float salrioNeto (float sb)
{
	int t;
	float IVA = 0.13, AFP = 0.02;
	t = sb * (1 - IVA - AFP);
	return (t);
}
